@model Produto

<h3>Cadastrar</h3>

<form asp-action="Cadastrar" method="post" class="col-md-5">


    <div class="form-group">
        <label class="col-form-label" for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label class="col-form-label" for="descricao">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control" />
    </div>
    
    <div class="form-group">
        <label class="col-form-label" for="preco">Descrição</label>
        <input type="text" asp-for="Preco" class="form-control" />
    </div> 
    
    <div class="form-group">
        <label class="col-form-label" for="quantidade">Quantidade</label>
        <input type="text" asp-for="Quantidade" class="form-control" />
    </div>
    <input type="submit" class="form-control btn btn-success" />
</form>
