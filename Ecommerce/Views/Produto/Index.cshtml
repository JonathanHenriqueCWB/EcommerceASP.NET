@model List<Produto>

    <h1>Produtos</h1>
    <p><a asp-action="Cadastrar">Cadastrar Produto</a></p>
    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Preço</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Data</th>
                <th scope="col">Imagem</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="table-secondary">
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td>@item.Preco.ToString("C2")</td>
                <td>@item.Quantidade</td>
                <td>@item.CriadoEm</td>
                <td>
                    <img src="~/images/@item.Imagem"
                         alt="@item.Descricao"
                         style="width:150px;height:120px" />
                </td>
                <td style="text-align: right">
                    <a asp-action="Remover" asp-route-id="@item.Id">Remover</a>
                    <a asp-action="Alterar" asp-route-id="@item.Id">Alterar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
