@model IEnumerable<Domain.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-default" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td class="text-right">
                <a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn btn-primary">Details</a>
                <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
