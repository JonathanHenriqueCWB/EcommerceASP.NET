@model Produto
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>Cadastrar Produto</legend>
        <div asp-validation-summary="ModelOnly" class="text-primary"></div>

        <div class="form-group" id="Nome">
            <label asp-for="Nome"></label>
            <input type="text" asp-for="Nome"  class="form-control" />
            <span asp-validation-for="Nome" class="text-primary"></span>
        </div>

        <div class="form-group" id="Preco">
            <label asp-for="Preco"></label>
            <input type="text" asp-for="Preco" class="form-control" />
            <span asp-validation-for="Preco" class="text-primary"></span>
        </div>

        <div class="form-group" id="Quantidade">
            <label asp-for="Quantidade"></label>
            <input type="text" asp-for="Quantidade" class="form-control" />
            <span asp-validation-for="Quantidade" class="text-primary"></span>
        </div>

        <div id="Categoria" class="form-group">
            <label>Categoria:</label>
            <select asp-items="@ViewBag.Categorias" class="form-control" name="drpCategorias">
                <option> -- SELECIONE -- </option>
            </select>
        </div>

        <div class="form-group" id="Imagem">
            <label>Imagem:</label><br />
            <input type="file" name="fupImagem" />
        </div>

        <input type="submit" class="btn btn-success" value="Cadastrar" />

    </fieldset>
</form>

