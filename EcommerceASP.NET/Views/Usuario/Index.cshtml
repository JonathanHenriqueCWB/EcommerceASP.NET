@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Usuarios Cadastrados";
}

<h2>@ViewData["Title"]</h2>
<p><a asp-action="Create" class="btn btn-primary">Create New</a></p>
<hr />

<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-hover">
            <thead class="success">
                <tr>
                    <td>Email</td>
                    <td>Senha</td>
                    <td>Criado em</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Email</td>
                        <td>@item.Senha</td>
                        <td>@item.CriadoEm</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


